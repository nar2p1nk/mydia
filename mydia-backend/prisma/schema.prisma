generator client {
    provider = "prisma-client-js"
}

datasource db{
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User{
    user_id Int @unique @id

    email   String @unique

    username String @unique 

    firstName String @db.Char(20)

    lastname String @db.Char(20)
    
    password String 

    activated Boolean @default(false)

    signupDate DateTime
}
